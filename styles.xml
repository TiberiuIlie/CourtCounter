<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="TeamNames" parent="@style/AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF9800</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainCounter" parent="@style/AppTheme">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#FF9800</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SecondaryCounter" parent="@style/AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <style name="Button" parent="@style/AppTheme">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TeamNames_land" parent="@style/AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF9800</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainCounter_land" parent="@style/AppTheme">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FF9800</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SecondaryCounter_land" parent="@style/AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <style name="Button_land" parent="@style/AppTheme">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>